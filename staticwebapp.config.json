{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/assets/*"]
  },
  "routes": [
    { "route": "/creators", "redirect": "/projects", "statusCode": 301 },
    { "route": "/users",    "redirect": "/groups",   "statusCode": 301 },
    { "route": "/api/*", "allowedRoles": ["anonymous"] },
    { "route": "/*", "allowedRoles": ["anonymous"] }
  ],
  "responseOverrides": {
    "401": { "redirect": "/login" }
  },
  "platform": {
    "apiRuntime": "node:20"
  }
}
